
@model SurveySystem.Models.TBL_ADMIN

@{
    Layout = null;
}

    <style>
        .btn btn-primary{
            background-color: cadetblue;
            color: white;
            padding: 14px 16px;
            margin: 0 0;
            border: none;
            cursor: pointer;
            width: 100%;
            opacity: 0.9;
        }

            .btn btn-primary:hover {
                opacity: 1;
            }
    </style>


<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Login Page</title>

    <!-- Custom fonts for this template-->
    <link href="~/BootstrapFiles/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

    <!-- Custom styles for this template-->

    <link href="~/BootstrapFiles/css/sb-admin-2.min.css" rel="stylesheet" />
    <link href="~/BootstrapFiles/css/sb-admin-2.css" rel="stylesheet" />
</head>

<body class="bg-gradient-primary">

    <div class="container">

        <!-- Outer Row -->
        <div class="row justify-content-center">

            <div class="col-xl-10 col-lg-12 col-md-9">

                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row2">
                            <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                            <div class="col-lg-6">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-4">Welcome Back!</h1>
                                    </div>
                                    <form class="user">
                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.AD_NAME, htmlAttributes: new { @class = "control-label row-md-1" })
                                            @Html.EditorFor(model => model.AD_NAME, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.AD_NAME, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.AD_PASSWORD, htmlAttributes: new { @class = "control-label row-md-2" })

                                            @Html.PasswordFor(model => model.AD_PASSWORD, new { @class = "form-control" })
                                            <br />
                                            @Html.ValidationMessageFor(model => model.AD_PASSWORD, "", new { @class = "text-danger" })
                                        </div>

                                        <div class="form-group">
                                            <div class="custom-control custom-checkbox small">
                                                <input type="checkbox" class="custom-control-input" id="customCheck">
                                                <label class="custom-control-label" for="customCheck">Remember Me</label>
                                            </div>

                                            <div class="form-group">
                                                <div class="col-md-offset-3 col-md-12">
                                                    <a href="/Home/DashBoard" class="btn btn-primary btn-user btn-block" >Login</a>
                                                </div>
                                            </div>



                                            <div>
                                                @Html.ActionLink("Go to Home Page", "Index")
                                            </div>

                                        </div>

                                  </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>

    </div>

    <p style="color:red">@ViewBag.msg</p>

    <!-- Bootstrap core JavaScript-->
    <script src="~/BootstrapFiles/vendor/jquery/jquery.min.js"></script>
    <script src="~/BootstrapFiles/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- Core plugin JavaScript-->
    <script src="~/BootstrapFiles/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="~/BootstrapFiles/js/sb-admin-2.min.js"></script>

</body>

</html>


